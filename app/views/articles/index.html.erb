<h1>All articles</h1>


<table border="1" style="text-align: center;">
	
		<tr>
			<th>id</th>
			<th>title</th>
			<th>description</th>
			<th>created date</th>
			<th>updated date</th>
			<th>helper</th>
		</tr>

		<% @article.each do |a| %>
			<tr>
				<td>
					<%= a.id %>
				</td>
				<td>
					<%= link_to a.title, article_path(a.id) %>
				</td>
				<td>
					<%= a.description %>
				</td>
				<td> 
					<%= a.created_at %> 
				</td>
				<td>
					<%= a.updated_at %>
				</td>
				<td>
					<%= link_to 'Edit', edit_article_path(a.id) %>
				</td>
				<td>
					<%= link_to 'Delete', article_path(a), method: :delete %>
				</td>
			</tr>
		<% end %>
</table>


<%= link_to 'Create new article', new_article_path %>

