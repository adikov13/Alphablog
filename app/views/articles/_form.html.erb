<% if @article.errors.any? %>
	<h3> The following erros occured</h3>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
		<% end %>
	</ul>
<% end %>
<div class="row">
	<div class="col-md-12">	
	
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-2">			
					<%= f.label :title %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of the articke", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :description %>
				</div>
				<div class="col-md-8">
					<%= f.text_area :description, class: "form-control", placeholder: "Body of the article" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<%= f.submit class: "btn btn-primary btn-md" %>
				</div>
			</div>
	</div>
</div>
<% end %>