<div class="row">
	<div class="col-md-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :username %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter your username", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :email %>
				</div>
				<div class="col-md-8">
					<%= f.text_area :email, class: "form-control", placeholder: "Enter your email" %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :password %>
				</div>
				<div class="col-md-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-md")%>
				</div>
			</div>
		<% end %>
	</div>
</div>