<h1>All user</h1>


<table border="1" style="text-align: center;">
	
		<tr>
			<th>id</th>
			<th>username</th>
			<th>email</th>
			<th>description</th>
			<th>created date</th>
			<th>updated date</th>
			<th>helper</th>
			<th>helper</th>
		</tr>

		<% @user.each do |u| %>
			<tr>
				<td>
					<%= u.id %>
				</td>
				<td>
					<%= link_to u.username, user_path(u.id) %>
				</td>
				<td>
					<%= u.description %>
				</td>
				<td> 
					<%= time_ago_in_words(u.created_at) %> 
				</td>
				<td>
					<%= time_ago_in_words(u.updated_at) %>
				</td>
				<td>
					<%= link_to 'Edit', edit_user_path(u.id) %>
				</td>
				<td>
					<%= link_to 'Delete', user_path(u), method: :delete %>
				</td>
			</tr>
		<% end %>
</table>

